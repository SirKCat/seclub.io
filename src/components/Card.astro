---
import dayjs from 'dayjs'

export interface Props {
  post: any;
}

const { post } = Astro.props;
---

<a href={post.url}
  class="transition-all duration-300 ease-in-out h-full block relative top-0 hover:-top-2 border border-gray-200 bg-white rounded-xl overflow-hidden"
  data-test="article-card">

  <img class="" src={post.frontmatter.image} alt={post.frontmatter.title} width="360" height="192">
  
  <div class="py-6 px-8">
    <h2 class="font-bold text-2xl leading-tight">
      {post.frontmatter.title}
    </h2>
    <p class="text-xs text-gray-600 mt-4 flex items-center">
      {dayjs(new Date(post.frontmatter.published_on)).format('ddd, DD MMM YYYY')}
    </p>
  </div>
</a>

<style>
  img {
    width: 100%;
    aspect-ratio: 15/7;
    object-fit: cover;
  }
</style>